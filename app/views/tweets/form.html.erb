<% if @tweet.errors.any? %>
  <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @tweet do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :tweet %>
    <%= f.text_area :tweet %>
  </div>
  <%= f.submit %>
<% end %>